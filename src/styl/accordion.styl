.accordion
  label
    font-size 150%
    font-weight bold
    padding .5em 0 .2em 0
    display block
    background lightgray
    margin 5px
    &:after
      content '→'
  input
    display none
    &:checked
      & ~ p
        max-height 100px
      & ~ label
        &:after
          content '↓'
  p
    max-height 0px
    overflow hidden
    transition all .5s ease