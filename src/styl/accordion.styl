@import "variables.styl"

.accordion
  label
    font-family 'Montserrat', sans-serif
    //font-size 150%
    //font-weight bold
    //padding .5em 0 .2em 0
    display flex
    align-items center
    justify-content space-between
    //background lightgray
    //margin 5px
    width 100%
    height 52px
    border-top 1px solid #D2D9E2
    color $color-main
    transition: 0.5s;
    cursor: pointer

    &:hover
      color #000
      &:after
          content ''
          //font-size 24px
          background-image url("../images/add.svg")
          background-position: center top;
          background-size 16px;
          display block
          width 16px
          height 16px


    //.title

  input
    display none
    &:checked
      & ~ p
        //max-height 100px
        overflow hidden
        height auto
        margin 20px 0
      & ~ label
        color #000
        &:after
          content ''
          background-image none
        &:hover
          &:after
            content ''
            //font-size 24px
            background-image url("../images/multiply.svg")
            background-position: center top;
            background-size 16px;
            display block
            width 16px
            height 16px



  p
    //max-height 0px
    overflow hidden
    height 0
    margin 0
    transition all .5s ease-in-out